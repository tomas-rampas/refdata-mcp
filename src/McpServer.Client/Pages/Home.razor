@page "/"

<PageTitle>Banking Reference Data System</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="text-center my-5">
                <h1 class="display-4 fw-bold text-primary">
                    <i class="fas fa-database me-3"></i>Banking Reference Data System
                </h1>
                <p class="lead text-muted">Intelligent Query and Management Platform</p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-5 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-comments fa-3x text-primary mb-3"></i>
                            <h4 class="card-title">Chat Assistant</h4>
                            <p class="card-text">Query policies, procedures, and reference data using natural language. Get instant answers with source references.</p>
                            <a href="/chat" class="btn btn-primary">
                                <i class="fas fa-arrow-right me-2"></i>Start Chat
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-upload fa-3x text-primary mb-3"></i>
                            <h4 class="card-title">Data Ingestion</h4>
                            <p class="card-text">Load and index documents from multiple sources including local files, Jira, and Confluence.</p>
                            <a href="/ingestion" class="btn btn-primary">
                                <i class="fas fa-arrow-right me-2"></i>Manage Ingestion
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-12">
                    <h3 class="mb-4">System Features</h3>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex">
                        <i class="fas fa-brain fa-2x text-primary me-3"></i>
                        <div>
                            <h5>AI-Powered Search</h5>
                            <p class="text-muted">Leverages advanced language models to understand queries and provide accurate responses.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex">
                        <i class="fas fa-shield-alt fa-2x text-primary me-3"></i>
                        <div>
                            <h5>Compliance Ready</h5>
                            <p class="text-muted">Maintains audit trails and source attribution for all responses.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex">
                        <i class="fas fa-sync fa-2x text-primary me-3"></i>
                        <div>
                            <h5>Real-Time Updates</h5>
                            <p class="text-muted">Automatically syncs with source systems to ensure data accuracy.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
