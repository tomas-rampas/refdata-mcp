{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "McpServer": "Debug"
    }
  },
  "AllowedHosts": "*",
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "mcp_rag_banking",
    "CollectionName": "document_chunks",
    "VectorIndexName": "vector_index"
  },
  "Ollama": {
    "BaseUrl": "http://localhost:11434",
    "EmbeddingModel": "nomic-embed-text",
    "GenerationModel": "llama3",
    "MaxRetries": 3,
    "TimeoutSeconds": 30,
    "TemperatureForGeneration": 0.7,
    "MaxTokens": 2048
  },
  "Jira": {
    "BaseUrl": "http://localhost:8080",
    "Username": "admin",
    "ApiToken": "your-jira-api-token",
    "DefaultProject": "BANK",
    "JqlQuery": "project = BANK AND type in (Policy, Procedure, 'Reference Data')",
    "MaxResults": 100
  },
  "Confluence": {
    "BaseUrl": "http://localhost:8090",
    "Username": "admin",
    "ApiToken": "your-confluence-api-token",
    "SpaceKeys": ["BANKPOL", "BANKPROC", "BANKREF"],
    "MaxResults": 100
  },
  "Ingestion": {
    "ScheduleIntervalMinutes": 60,
    "LocalFilesPath": "/data/banking-docs",
    "SupportedFileTypes": [".pdf", ".docx", ".txt", ".md"],
    "ChunkSize": 1000,
    "ChunkOverlap": 200,
    "EnableAutoIngestion": true,
    "MaxConcurrentDocuments": 5
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5000",
      "https://localhost:5001",
      "http://localhost:3000",
      "https://localhost:3001"
    ]
  },
  "Features": {
    "EnableSwagger": true,
    "EnableHealthChecks": true,
    "EnableMetrics": false,
    "EnableAuditLogging": true
  }
}